# shellcheck disable=SC2154
if [[ ! -d "$dotfiles_dest" ]] ; then
  echo "FATAL: dotfiles_dest is not found. I don't know what to do." 1>&2
  return 1
fi

main() {
  pip3 install pre-commit || return $?

  if cd "$dotfiles_dest" ; then
    pre-commit install
  fi
}

main "$@"

# EOF
