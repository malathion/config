if ! command -v brew &> /dev/null; then echo "Missing dependency: brew" 1>&2; exit 1; fi

brew_install() {
  local app
  app="$1"

  brew install "$app" || exit 1
}

main() {
  for app in "${homebrew_apps[@]}"; do
    brew_install "$app"
  done
}

homebrew_apps=(
  awscli
  bash
  bash-completion
  binutils
  brew-cask-completion
  cmake
  colordiff
  coreutils
  csvkit
  curl
  dateutils
  dialog
  diffutils
  dos2unix
  enca
  encfs
  exa
  exiftool
  file-formula
  findutils --with-default-names
  flake8
  git
  glances
  gnu-indent --with-default-names
  gnu-sed --with-default-names
  gnu-tar --with-default-names
  gnu-which --with-default-names
  gnupg
  grc
  grep --with-default-names
  gzip
  htop
  hub
  imagemagick
  inetutils
  jq
  keychain
  less
  lesspipe
  libnotify
  libqalculate
  lynx
  mailutils
  make
  media-info
  moreutils
  mosh
  mps-youtube
  ncdu
  ncurses
  nmap
  openssh
  openvpn
  pandoc
  pipenv
  pv
  pwgen
  pyenv
  qrencode
  ranger
  rename
  rsync
  sendemail
  shellcheck
  sox
  sshfs
  sxiv
  terminal-notifier
  terraform
  terraform-docs
  tig
  tmux
  tree
  unar
  vim --override-system-vi
  vimpager
  watch
  wget
  wine
)


main "$@"
