# shellcheck disable=SC2174

main() {
  mkdir --parents --mode=0700 "$HOME/Caches/" || return 1
  export XDG_CACHE_HOME="$HOME/Caches/"
  mkdir --parents --mode=0700 "$HOME/Preferences/" || return 1
  export XDG_CONFIG_HOME="$HOME/Preferences/"
  mkdir --parents --mode=0700 "$HOME/Application Support/" || return 1
  export XDG_DATA_HOME="$HOME/Application Support/"
}

main "$@"
exit $?
