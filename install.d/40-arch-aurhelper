if ! command -v mktemp 1> /dev/null 2>&1 ; then echo "Missing dependency: mktemp" 1>&2; exit 1; fi
tmpdir=$(dirname "$(mktemp -u || exit 1)")

main() {
  # install 'yay'
  # https://github.com/Jguer/yay
  cd "$tmpdir" || return 1
  git clone https://aur.archlinux.org/yay.git || return 1
  cd yay || return 1
  makepkg --install --needed --syncdeps --noconfirm || return 1
}

main "$@" || exit 1
