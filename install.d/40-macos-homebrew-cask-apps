if ! command -v brew &> /dev/null; then echo "Missing dependency: brew" 1>&2; exit 1; fi

cask_install() {
  local app
  app="$1"

  brew cask install "$app" || exit 1
}

main() {
  for cask in "${casks[@]}"; do
    cask_install "$cask"
  done
}

casks=(
  1password
  1password-cli
  firefox
  kitty
  osxfuse
  scroll-reverser
  visual-studio-code
  xquartz
)

main "$@"
