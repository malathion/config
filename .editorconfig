# https://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

# Docstrings and comments use max_line_length = 79
[*.py]
max_line_length = 79

# shell scripts
[*.sh]
indent_size = 2

[scripts/**]
indent_size = 2

[install.d/**]
indent_size = 2

[home/.shellrc.d/**]
indent_size = 2

[*install]
indent_size = 2

# The JSON files contain newlines inconsistently
[*.json]
indent_size = 2

# Makefiles always use tabs for indentation
[Makefile]
indent_style = tab

[docs/**.txt]
max_line_length = 79
