    # Use the windows key
set $mod Mod4

    # Focus follows mouse
focus_follows_mouse yes

    # How to handle annoying popups
    # popup_during_fullscreen <smart|ignore|leave_fullscreen>
    # show the popup only if it belongs to the fullscreen application
popup_during_fullscreen smart

# styles {{{1
#
# i3bar {{{2
bar {
            # show the workspace buttons
        workspace_buttons yes
            # use a more readable font
        font pango:Consolas 10
            # show tray icons on the primary monitor
        tray_output primary
            # use our custom statusbar command
        status_command statusbar
}
# 2}}}
    # Font for window titles. Will also be used by the bar unless a different font
    # is used in the bar {} block below. ISO 10646 = Unicode
#font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
    # The font above is very space-efficient, that is, it looks good, sharp and
    # clear in small sizes. However, if you need a lot of unicode glyphs or
    # right-to-left text rendering, you should instead use pango for rendering and
    # chose a FreeType font, such as:
    # font pango:DejaVu Sans Mono 10
font pango:Consolas 10
    # Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
    # default borders
        # normal windows get 1pixel borders only
new_window          1pixel
        # floating windows get normal borders
new_float           normal
        # hide borders adjacent to the screen edges
hide_edge_borders   both
    #class              border  backgr. text
