# hotkeys {{{1
# windows {{{2
# containers {{{3
    # focus {{{4
    # focus the parent container
bindsym $mod+a focus parent
    # focus the child container
bindsym $mod+d focus child
    # move focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
    # kill focused window
bindsym $mod+Shift+q kill
# 4}}}
# split {{{4
    # split in horizontal orientation
bindsym $mod+shift+h     split h
bindsym $mod+shift+minus split h
    # split in vertical orientation
bindsym $mod+shift+v     split v
bindsym $mod+bar         split v
# 4}}}
	# layout {{{4
    # enter fullscreen mode for the focused container
bindsym $mod+u fullscreen
    # change container layout (stacked, tabbed, toggle split)
bindsym $mod+apostrophe layout stacking
bindsym $mod+comma      layout tabbed
bindsym $mod+period     layout toggle split
# 4}}}
	# move {{{4
    # move focused container within workspace
bindsym $mod+space+h move left
bindsym $mod+space+j move down
bindsym $mod+space+k move up
bindsym $mod+space+l move right
    # move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1: shell
bindsym $mod+Shift+2 move container to workspace 2: web
bindsym $mod+Shift+3 move container to workspace 3: misc
bindsym $mod+Shift+4 move container to workspace 4: chat
bindsym $mod+Shift+5 move container to workspace 5: steam
bindsym $mod+Shift+6 move container to workspace 6: media
bindsym $mod+Shift+7 move container to workspace 7: docs
bindsym $mod+Shift+8 move container to workspace 8: misc
bindsym $mod+Shift+9 move container to workspace 9: vm
bindsym $mod+Shift+0 move container to workspace 10: games
# }}}
    # floating {{{3
bindsym $mod+Shift+space floating toggle
    # change focus between tiling / floating windows
#bindsym $mod+space focus mode_toggle
