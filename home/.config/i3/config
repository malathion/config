# Modes {{{1
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym Shift+h resize shrink width 50 px or 50 ppt
        bindsym Shift+l resize grow height 50 px or 50 ppt
        bindsym Shift+j resize shrink height 50 px or 50 ppt
        bindsym Shift+k resize grow width 50 px or 50 ppt
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym l resize grow height 10 px or 10 ppt
        bindsym j resize shrink height 10 px or 10 ppt
        bindsym k resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: same hotkey
        bindsym $mod+p mode "default"
}

    # Start i3bar
bar {
            # show the workspace buttons
        workspace_buttons yes
            # use a more readable font
        font pango:Consolas 10
            # show tray icons on the primary monitor
        tray_output primary
            # use our custom statusbar command
        status_command statusbar
}
