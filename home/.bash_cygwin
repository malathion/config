#!/usr/bin/env bash
#
# Additional configuration options for when running in cygwin
#

if echo "$(uname -o)" == "Cygwin"; then
        # include path for postgresql windows binaries
    PATH="${PATH}:${HOME}/pgsql/bin/"
        # function to copy files to mothership
    cphome() { rsync -rEAthztAXog --safe-links --progress --append $1 mothership:/media/vault/incoming/cygwin/ ; }
        # function to move files to mothership
    #mvhome() { scp $1 ryan@ryanpd.me:/home/ryan/ -P 22222 }
        # export display for x11 forwarding
    export DISPLAY=:0.0
fi
